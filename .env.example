# Vector Database Configuration
# Options: milvus, lancedb

# Recommended: Use LanceDB for stability (avoiding milvus-lite issues)
VECTOR_BACKEND=lancedb

# Alternative: Milvus (requires Docker server to avoid lite issues)
# VECTOR_BACKEND=milvus
# MILVUS_URI=http://localhost:19530

# Option 1: Local Milvus Lite (has known issues - not recommended)
# MILVUS_URI=./milvus.db

# Option 3: Zilliz Cloud (managed Milvus)
# MILVUS_URI=https://your-cluster-endpoint.zillizcloud.com
# MILVUS_TOKEN=your_api_key_here

MILVUS_COLLECTION=tic_excel_documents
# MILVUS_TOKEN=your_token_here  # Uncomment if using authentication

# Hybrid Search Configuration
MILVUS_SEARCH_TYPE=hybrid  # Options: vector, keyword, hybrid
MILVUS_SPARSE_VECTOR_DIMENSIONS=10000  # Dimensions for sparse vectors in hybrid search

# Knowledge Base Settings
KNOWLEDGE_BASE_PATHS=data/eastmoney_concept_constituents.xlsx,data/sw_third_industry_constituents.xlsx
KNOWLEDGE_TABLE=tic_excel_documents
KNOWLEDGE_CACHE_DIR=.kb_cache/milvus
KNOWLEDGE_REBUILD=false
KNOWLEDGE_INGEST_CONCURRENCY=4

# Embedder Configuration
KNOWLEDGE_EMBEDDER=text-embedding-v3
KNOWLEDGE_EMBEDDER_BACKEND=dashscope
KNOWLEDGE_EMBEDDER_API_KEY=your_dashscope_api_key_here
KNOWLEDGE_EMBEDDER_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# Alternative: Use DASHSCOPE_API_KEY directly
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# Model Configuration
DASHSCOPE_MODEL=qwen-plus
DASHSCOPE_TEMPERATURE=0.3
DASHSCOPE_ENABLE_THINKING=false

# Workflow Configuration
INITIAL_QUERY_COUNT=3
MAX_RESEARCH_LOOPS=2
MIN_RESEARCH_CHAR_COUNT=600
INDUSTRY_KB_HITS=2
REFLECTION_DEPTH=1